<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context="jp.ac.shibaura_it.sayo.se.reservationsystem.user.controller.TimeDecisionFragment">

    <!-- TODO: Update blank fragment layout -->

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff9e9e9e"/>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="@android:color/darker_gray"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:id="@+id/decisionButton"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="開始時間"
            android:id="@+id/startTimeButton"
            style="@android:style/Widget.DeviceDefault.ActionButton"
            android:textSize="18sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="〜"
            android:id="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="終了時間"
            android:id="@+id/endTimeButton"
            style="@android:style/Widget.DeviceDefault.ActionButton"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>
